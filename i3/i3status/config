# i3status configuration file.
# Mostly based on the basic i3status config
# with my own additions for my laptop

general {
        colors = true
        interval = 5
}

order += "battery all"
order += "tztime local"


battery all {
        format = "%status %percentage %remaining"
        last_full_capacity = true
        status_chr = ""
        status_full = ""
        status_bat = ""
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
